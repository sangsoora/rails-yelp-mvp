<h1><%= @restaurant.name %> <%= link_to "Edit", edit_restaurant_path(@restaurant), class: 'btn btn-success' %> <%= link_to 'Delete', restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure to delete #{@restaurant.name}?"}, class: 'btn btn-danger' %></h1>
<h2>Address: <%= @restaurant.address %></h2>
<p>Phone number: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category %></p>

<%= link_to 'Back to list', restaurants_path %>

<ul>
  <% @reviews.each do |review| %>
    <li><%= review.content %> - <%= review.rating %> <%= link_to 'Edit review', edit_review_path(review), class: 'btn btn-success' %> <%= link_to 'Delete review', review_path(review), method: :delete, data: { confirm: "Are you sure to delete this review?"}, class: 'btn btn-danger' %></li>
  <% end %>
</ul>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
